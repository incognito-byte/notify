{
  "name": "notify-cli-tool",
  "version": "1.0.1",
  "description": "A CLI tool for GitHub notifications and issue management",
  "homepage": "https://github.com/incognito-byte/notify-cli-tool#readme",
  "bugs": {
    "url": "https://github.com/incognito-byte/notify-cli-tool/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/incognito-byte/notify-cli-tool.git"
  },
  "license": "MIT",
  "author": "incognito-byte",
  "type": "commonjs",
  "main": "dist/index.js",
  "bin": {
    "notify": "./dist/notify-bundle.js"
  },
  "scripts": {
    "build": "esbuild bin/notify.ts --bundle --platform=node --target=node18 --format=cjs --outfile=dist/notify-bundle.js --external:fsevents",
    "dev": "ts-node bin/notify.ts",
    "start": "node dist/notify-bundle.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build && npm test",
    "version": "npm run build && git add dist/",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.6.2",
    "esbuild": "^0.25.10",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@inquirer/input": "^4.2.4",
    "@inquirer/prompts": "^7.8.6",
    "chalk": "^5.6.2"
  }
}
